<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Januari"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Januari" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                tools:text="2024" />

        </LinearLayout>

        <!-- Statistics Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginBottom="12dp">

            <!-- Total Documents -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_stat_item"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tvTotalDocuments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    tools:text="125" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Pembelian Rumah -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_stat_item"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tvPembelianRumah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_pembelian_rumah"
                    tools:text="45" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PR"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Renovasi Rumah -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_stat_item"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tvRenovasiRumah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_renovasi_rumah"
                    tools:text="32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RR"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Pemasangan AC -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_stat_item"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tvPemasanganAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_pemasangan_ac"
                    tools:text="28" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Pemasangan CCTV -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_stat_item"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/tvPemasanganCCTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_pemasangan_cctv"
                    tools:text="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CCTV"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </GridLayout>

        <!-- Generated Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="6dp"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tvGeneratedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generated: 01/01/2024 10:30"
                android:textSize="11sp"
                android:textColor="@color/text_hint"
                tools:text="Generated: 01/01/2024 10:30" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:alpha="0.5" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>